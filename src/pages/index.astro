---
import BaseLayout from "../layouts/BaseLayout.astro";

const services = [
  {
    name: "Balayage and lived-in color",
    description:
      "Custom painted color for dimension and softness. Designed to grow out seamlessly.",
    image:
      "https://imagedelivery.net/xaKlCos5cTg_1RWzIu_h-A/ce98ba58-2356-49bb-d463-55cf99ece100/publicContain"
  },
  {
    name: "Precision cuts",
    description:
      "Signature cuts shaped to your face, texture, and lifestyle with clean lines.",
    image:
      "https://imagedelivery.net/xaKlCos5cTg_1RWzIu_h-A/3d3c7769-4eda-4255-fdbe-de092d78a700/public"
  },
  {
    name: "Keratin and collagen rituals",
    description:
      "Smooth, strengthen, and restore shine with premium keratin treatments.",
    image:
      "https://imagedelivery.net/xaKlCos5cTg_1RWzIu_h-A/5342165d-2fd6-4025-6918-550fd351a800/public"
  }
];

const menu = [
  "Shampoo, cut, and blow dry",
  "Root color touch-up",
  "Womens haircut",
  "Shampoo and blowdry",
  "Full highlights",
  "Mens shampoo and cut",
  "Single application color",
  "Partial highlights",
  "Balayage and ombre",
  "Shampoo, cut, and style for women",
  "Double dimension color with full highlights",
  "Double dimension with partial highlights",
  "Kids cut (8 and under)",
  "Hair plastic surgery treatment",
  "Keratin + collagen",
  "Deep restructuring treatment",
  "Organic keratin for medium to coarse hair"
];

const testimonials = [
  {
    name: "Laura C.",
    quote:
      "My hair looks healthier than ever. The highlights are bright but still soft and natural."
  },
  {
    name: "Nohemis S.",
    quote:
      "James listens and delivers. My color feels vibrant and the cut grows out perfectly."
  },
  {
    name: "Nathalie O.",
    quote:
      "The keratin treatment was a game changer. Smooth, glossy, and fast service."
  },
  {
    name: "Mateo C.",
    quote:
      "Clean, professional, and exactly the cut I asked for. I am coming back."
  }
];
---

<BaseLayout title="James Styles Hair Salon | Miami, FL">
  <div class="min-h-screen">
    <header class="sticky top-0 z-50 backdrop-blur bg-cream-50/80 dark:bg-olive-900/70 border-b border-cream-200 dark:border-olive-800">
      <div class="max-w-6xl mx-auto px-6 py-4 flex items-center justify-between">
        <a href="#home" class="flex items-center gap-3">
          <div class="h-11 w-11 rounded-full bg-terracotta-500 flex items-center justify-center text-cream-50 font-display text-xl">JS</div>
          <div>
            <p class="font-display text-lg">James Styles</p>
            <p class="text-xs uppercase tracking-[0.3em] text-olive-600 dark:text-cream-200">Hair Salon</p>
          </div>
        </a>
        <nav class="hidden md:flex items-center gap-6 text-sm font-medium">
          <a href="#home" class="hover:text-terracotta-600">Home</a>
          <a href="#about" class="hover:text-terracotta-600">About</a>
          <a href="#services" class="hover:text-terracotta-600">Services</a>
          <a href="#contact" class="hover:text-terracotta-600">Contact</a>
        </nav>
        <button
          type="button"
          data-theme-toggle
          class="flex items-center gap-2 rounded-full border border-olive-200 dark:border-olive-700 px-4 py-2 text-xs uppercase tracking-[0.2em]"
        >
          Toggle
        </button>
      </div>
    </header>

    <main id="home">
      <section class="section-glow pt-24 pb-20">
        <div class="max-w-6xl mx-auto px-6 grid lg:grid-cols-[1.1fr_0.9fr] gap-12 items-center">
          <div>
            <p class="text-sm uppercase tracking-[0.3em] text-olive-600 dark:text-cream-200">Miami Boutique Salon</p>
            <h1 class="mt-4 text-4xl md:text-5xl font-display text-shadow">
              Custom color, healthy hair, and signature cuts in Miami
            </h1>
            <p class="mt-5 text-lg text-olive-700 dark:text-cream-200">
              A warm, elevated salon experience led by James Styles. We craft lived-in color, clean cuts, and
              restorative treatments tailored to your texture and lifestyle.
            </p>
            <div class="mt-8 flex flex-wrap gap-4">
              <a
                href="#contact"
                class="bg-terracotta-500 hover:bg-terracotta-600 text-cream-50 px-6 py-3 rounded-full font-medium"
              >
                Book Your Appointment
              </a>
              <a
                href="tel:+13055881645"
                class="border border-olive-300 dark:border-olive-700 px-6 py-3 rounded-full font-medium"
              >
                Call or Text
              </a>
            </div>
            <div class="mt-8 flex flex-wrap gap-6 text-sm text-olive-600 dark:text-cream-200">
              <span>5-star rated</span>
              <span>462 Google reviews</span>
              <span>Se habla Espanol</span>
            </div>
          </div>
          <div class="relative">
            <img
              src="https://imagedelivery.net/xaKlCos5cTg_1RWzIu_h-A/ca1bfcdf-acc6-4414-e1b1-3fdfefea9c00/public"
              alt="Stylist finishing balayage"
              class="rounded-[36px] shadow-soft object-cover h-[420px] w-full"
            />
            <div class="absolute -bottom-8 -left-8 bg-cream-50 dark:bg-olive-900 border border-cream-200 dark:border-olive-700 p-5 rounded-2xl shadow-card">
              <p class="font-display text-lg">15+ years of expertise</p>
              <p class="text-sm text-olive-600 dark:text-cream-200">Color, cuts, and restorative care</p>
            </div>
          </div>
        </div>
      </section>

      <section id="services" class="py-20">
        <div class="max-w-6xl mx-auto px-6">
          <div class="flex flex-col md:flex-row md:items-end md:justify-between gap-6">
            <div>
              <p class="text-sm uppercase tracking-[0.3em] text-olive-600 dark:text-cream-200">Services</p>
              <h2 class="mt-3 text-3xl md:text-4xl font-display">Signature services for every hair goal</h2>
            </div>
            <a
              href="#contact"
              class="border border-olive-300 dark:border-olive-700 px-5 py-2 rounded-full text-sm font-medium"
            >
              Start your consultation
            </a>
          </div>

          <div class="mt-12 grid lg:grid-cols-3 gap-8">
            {services.map((service) => (
              <article class="bg-cream-50/80 dark:bg-olive-900/70 border border-cream-200 dark:border-olive-700 rounded-3xl overflow-hidden shadow-card">
                <img src={service.image} alt={service.name} class="h-52 w-full object-cover" />
                <div class="p-6">
                  <h3 class="font-display text-2xl">{service.name}</h3>
                  <p class="mt-3 text-olive-700 dark:text-cream-200">{service.description}</p>
                </div>
              </article>
            ))}
          </div>

          <div class="mt-12 grid md:grid-cols-2 gap-6 text-sm text-olive-700 dark:text-cream-200">
            {menu.map((item) => (
              <div class="flex items-center gap-3">
                <span class="h-2 w-2 rounded-full bg-terracotta-500"></span>
                <span>{item}</span>
              </div>
            ))}
          </div>
        </div>
      </section>

      <section id="about" class="section-glow py-20">
        <div class="max-w-6xl mx-auto px-6 grid lg:grid-cols-[0.9fr_1.1fr] gap-10 items-center">
          <div>
            <img
              src="https://imagedelivery.net/xaKlCos5cTg_1RWzIu_h-A/b24f03e7-73af-469b-31b2-35e898d0fd00/public"
              alt="Salon interior"
              class="rounded-[32px] shadow-soft object-cover h-[420px] w-full"
            />
          </div>
          <div>
            <p class="text-sm uppercase tracking-[0.3em] text-olive-600 dark:text-cream-200">About James</p>
            <h2 class="mt-3 text-3xl md:text-4xl font-display">
              A global education, a personal Miami experience
            </h2>
            <p class="mt-5 text-olive-700 dark:text-cream-200">
              With 15+ years in the beauty industry and more than a decade as owner of James Styles Hair Salon,
              James is known for precision, healthy hair, and an easy, lived-in finish. His specialty includes
              balayage color, cutting, keratin treatments, and organic botox.
            </p>
            <p class="mt-4 text-olive-700 dark:text-cream-200">
              James has trained and certified in Milan, San Jose, Rio de Janeiro, Medellin, and Panama, working
              with leading beauty brands along the way. A tight-knit team of stylists and assistants supports each
              appointment so clients feel relaxed, confident, and cared for.
            </p>
            <div class="mt-6 flex flex-wrap gap-4 text-sm text-olive-600 dark:text-cream-200">
              <span class="border border-olive-300 dark:border-olive-700 px-4 py-2 rounded-full">Balayage</span>
              <span class="border border-olive-300 dark:border-olive-700 px-4 py-2 rounded-full">Keratin</span>
              <span class="border border-olive-300 dark:border-olive-700 px-4 py-2 rounded-full">Organic Botox</span>
              <span class="border border-olive-300 dark:border-olive-700 px-4 py-2 rounded-full">Precision Cuts</span>
            </div>
          </div>
        </div>
      </section>

      <section class="py-20">
        <div class="max-w-6xl mx-auto px-6">
          <div class="flex flex-col md:flex-row md:items-end md:justify-between gap-6">
            <div>
              <p class="text-sm uppercase tracking-[0.3em] text-olive-600 dark:text-cream-200">Reviews</p>
              <h2 class="mt-3 text-3xl md:text-4xl font-display">What clients are saying</h2>
            </div>
            <div class="bg-cream-50 dark:bg-olive-900 border border-cream-200 dark:border-olive-700 rounded-2xl px-5 py-3 text-sm">
              5.0 average rating on Google (462 reviews)
            </div>
          </div>
          <div class="mt-10 grid md:grid-cols-2 gap-6">
            {testimonials.map((testimonial) => (
              <div class="bg-cream-50/80 dark:bg-olive-900/70 border border-cream-200 dark:border-olive-700 rounded-2xl p-6">
                <p class="text-olive-700 dark:text-cream-200">"{testimonial.quote}"</p>
                <p class="mt-4 font-semibold">{testimonial.name}</p>
              </div>
            ))}
          </div>
        </div>
      </section>

      <section id="contact" class="section-glow py-20">
        <div class="max-w-6xl mx-auto px-6 grid lg:grid-cols-[1.1fr_0.9fr] gap-12">
          <div>
            <p class="text-sm uppercase tracking-[0.3em] text-olive-600 dark:text-cream-200">Contact</p>
            <h2 class="mt-3 text-3xl md:text-4xl font-display">Reserve your chair</h2>
            <p class="mt-4 text-olive-700 dark:text-cream-200">
              Share your service goals and preferred timing. Our team will confirm details and walk you through
              the next steps.
            </p>
            <form class="mt-8 grid gap-4">
              <div class="grid md:grid-cols-2 gap-4">
                <input
                  type="text"
                  name="name"
                  placeholder="Full name"
                  class="w-full rounded-2xl border border-cream-200 dark:border-olive-700 bg-cream-50/80 dark:bg-olive-900/70 px-4 py-3"
                />
                <input
                  type="tel"
                  name="phone"
                  placeholder="Phone"
                  class="w-full rounded-2xl border border-cream-200 dark:border-olive-700 bg-cream-50/80 dark:bg-olive-900/70 px-4 py-3"
                />
              </div>
              <input
                type="email"
                name="email"
                placeholder="Email"
                class="w-full rounded-2xl border border-cream-200 dark:border-olive-700 bg-cream-50/80 dark:bg-olive-900/70 px-4 py-3"
              />
              <input
                type="text"
                name="service"
                placeholder="Desired service"
                class="w-full rounded-2xl border border-cream-200 dark:border-olive-700 bg-cream-50/80 dark:bg-olive-900/70 px-4 py-3"
              />
              <input
                type="text"
                name="datetime"
                placeholder="Preferred date and time"
                class="w-full rounded-2xl border border-cream-200 dark:border-olive-700 bg-cream-50/80 dark:bg-olive-900/70 px-4 py-3"
              />
              <textarea
                name="message"
                rows="4"
                placeholder="Tell us about your hair goals"
                class="w-full rounded-2xl border border-cream-200 dark:border-olive-700 bg-cream-50/80 dark:bg-olive-900/70 px-4 py-3"
              ></textarea>
              <button
                type="submit"
                class="bg-terracotta-500 hover:bg-terracotta-600 text-cream-50 px-6 py-3 rounded-full font-medium"
              >
                Request Appointment
              </button>
            </form>
          </div>
          <div class="space-y-6">
            <div class="bg-cream-50/80 dark:bg-olive-900/70 border border-cream-200 dark:border-olive-700 rounded-2xl p-6">
              <h3 class="font-display text-2xl">Visit the salon</h3>
              <p class="mt-3 text-olive-700 dark:text-cream-200">
                8631 Coral Way Suite 128<br />
                Miami, FL 33155
              </p>
              <p class="mt-4 text-olive-700 dark:text-cream-200">
                Call or text: <a href="tel:+13055881645" class="underline">(305) 588-1645</a>
              </p>
              <p class="mt-2 text-olive-700 dark:text-cream-200">
                WhatsApp: <a href="https://api.whatsapp.com/send?phone=13055881645" class="underline">Chat now</a>
              </p>
              <p class="mt-4 text-sm text-olive-600 dark:text-cream-200">
                Hours: Tue-Sat 10:00 AM - 7:00 PM (placeholder)
              </p>
            </div>
            <div class="bg-cream-50/80 dark:bg-olive-900/70 border border-cream-200 dark:border-olive-700 rounded-2xl overflow-hidden">
              <iframe
                title="James Styles Hair Salon map"
                src="https://www.google.com/maps?q=8631%20Coral%20Way%20Suite%20128%2C%20Miami%2C%20FL%2033155&output=embed"
                class="w-full h-[280px]"
                loading="lazy"
              ></iframe>
            </div>
          </div>
        </div>
      </section>
    </main>

    <footer class="border-t border-cream-200 dark:border-olive-800 py-10">
      <div class="max-w-6xl mx-auto px-6 flex flex-col md:flex-row md:items-center md:justify-between gap-4">
        <p class="text-sm text-olive-600 dark:text-cream-200">
          James Styles Hair Salon. Miami, Florida. Warm organic hair care with a global touch.
        </p>
        <div class="flex gap-4 text-sm">
          <a href="https://www.facebook.com/jamesstylesmiami/" class="hover:text-terracotta-600">Facebook</a>
          <a href="https://www.instagram.com/jamesstylesmiami/" class="hover:text-terracotta-600">Instagram</a>
          <a href="https://www.yelp.com/biz/james-styles-miami" class="hover:text-terracotta-600">Yelp</a>
        </div>
      </div>
    </footer>
  </div>
</BaseLayout>
