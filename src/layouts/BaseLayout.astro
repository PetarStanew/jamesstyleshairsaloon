---
import "../styles/global.css";

const { title = "James Styles Hair Salon" } = Astro.props;
---
<!doctype html>
<html lang="en" class="scroll-smooth">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Lato:wght@300;400;500;600&family=Playfair+Display:wght@400;600;700&display=swap"
      rel="stylesheet"
    />
  </head>
  <body class="text-olive-900 dark:text-cream-50">
    <slot />
    <script>
      const root = document.documentElement;
      const savedTheme = localStorage.getItem("theme");
      if (savedTheme) {
        root.classList.toggle("dark", savedTheme === "dark");
      }
      const toggle = document.querySelector("[data-theme-toggle]");
      if (toggle) {
        toggle.addEventListener("click", () => {
          const isDark = root.classList.toggle("dark");
          localStorage.setItem("theme", isDark ? "dark" : "light");
        });
      }
    </script>
  </body>
</html>
